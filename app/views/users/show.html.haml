
%h1{:align => "center"} Ваши лагеря
%table.table.table-condenced{:bgcolor => "white", :border => "3", :bordercolor => "red", :cellpadding => "8", :width => "100%"}
  %tr
    %th= "Колличество лагерей (на неделе #{@all})"
    %th= "Колличество заполненых лагерей (на неделе #{@all})"
    %th= "Колличество принятых администратором лагерей (на неделе #{@appr}"
  %tr 
    %td= @f.camps.size
    %td= @f.camps.find_all{|elem| elem.is_finished == true}.size 
    %td= @f.camps.find_all{|elem| elem.is_approved == true}.size

