%fieldset
  %legend
    = 'Вожатый'
  .form-group
    = f.label :name, 'Имя'
    = f.text_field :name, class: 'form-control'
    .form-group
      = f.label :role, 'Роль'
      = f.text_area :role, class: 'form-control', rows: '3'
    .form-group
      = f.label :about, 'Описание'
      = f.text_area :about, class: 'form-control', rows: '5'
    .form-group.alert.alert-danger
      = f.check_box :_destroy
      = f.label :_destroy, 'Удалить вожатого'
